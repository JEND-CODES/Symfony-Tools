{% extends 'base.html.twig' %}

{% block title %}Dynamic2 Tests{% endblock %}

{% block body %}

<div id="products">

    <p class="product">

        {% for product in products %}

            {{ product.title|raw }}

        {% endfor %}

    </p>

</div>

<button id="next-product-btn">NEXT PRODUCT</button>

<button id="prev-product-btn">PREVIOUS PRODUCT</button>

{% endblock %}

